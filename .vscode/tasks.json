{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build client",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "client/main.cpp",
                "client/user.cpp",
                "-o",
                "ChatKokaClient",
                "-lsfml-network",
                "-lsfml-window",
                "-lsfml-system"
            ],
            "group": "build"
        },

        {
            "label": "build server",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "server/main.cpp",
                "-o",
                "ChatKokaServer",
                "-lsfml-network",
                "-lsfml-window",
                "-lsfml-system"
            ],
            "group": "build"
        }
    ]
}